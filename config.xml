<?xml version='1.0' encoding='utf-8'?>
<widget id="nl.innovatewebdesign.absence" version="1.0.5" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Absence</name>
    <description>
        Absence is een app voor het absentieregistratiesysteem van Windesheim Flevoland
    </description>
    <author email="joey.hoek@windesheimflevoland.nl" href="http://www.windesheimflevoland.nl">
        Team 10
    </author>
    <content src="index.html" />
    <preference name="orientation" value="portrait" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="14" />
    <preference name="StatusBarOverlaysWebView" value="true" />
    <preference name="StatusBarBackgroundColor" value="#464648" />
    <preference name="StatusBarStyle" value="blacktranslucent" />
    <plugin name="cordova-plugin-battery-status" source="npm" spec="~1.1.1" />
    <plugin name="cordova-plugin-camera" source="npm" spec="~2.1.1" />
    <plugin name="cordova-plugin-media-capture" source="npm" spec="~1.2.0" />
    <plugin name="cordova-plugin-console" source="npm" spec="~1.0.2" />
    <plugin name="cordova-plugin-device" source="npm" spec="~1.1.1" />
    <plugin name="cordova-plugin-device-motion" source="npm" spec="~1.2.0" />
    <plugin name="cordova-plugin-device-orientation" source="npm" spec="~1.0.2" />
    <plugin name="cordova-plugin-dialogs" source="npm" spec="~1.2.0" />
    <plugin name="cordova-plugin-file" source="npm" spec="~4.1.1" />
    <plugin name="cordova-plugin-geolocation" source="npm" spec="~2.1.0" />
    <plugin name="cordova-plugin-globalization" source="npm" spec="~1.0.3" />
    <plugin name="cordova-plugin-inappbrowser" source="npm" spec="~1.3.0" />
    <plugin name="cordova-plugin-network-information" source="npm" spec="~1.2.0" />
    <plugin name="cordova-plugin-splashscreen" source="npm" spec="~3.2.1" />
    <plugin name="cordova-plugin-statusbar" source="npm" spec="~2.1.2" />
    <plugin name="cordova-plugin-vibration" source="npm" spec="~2.1.0" />
    <plugin name="cordova-plugin-whitelist" source="npm" spec="~1.2.1" />
    <plugin name="cordova-plugin-uniquedeviceid" source="npm" />
    <preference name="SplashMaintainAspectRatio" value="true" />
	<preference name="SplashShowOnlyFirstTime" value="false" />
   	<preference name="AutoHideSplashScreen" value="true" />  
	<preference name="SplashScreenDelay" value="1200" />
	<preference name="ShowSplashScreenSpinner" value="false" />  
	<preference name="FadeSplashScreen" value="true" />  
	<preference name="FadeSplashScreenDuration" value="400" />  
    <icon src="icon.png" />
	<splash src="splash.png" />
	<platform name="ios">
		<icon platform="ios" height="60" width="60" src="www/res/icon/ios/icon-60.png" />
		<icon platform="ios" height="120" width="120" src="www/res/icon/ios/icon-60-2x.png" />
		<icon platform="ios" height="180" width="180" src="www/res/icon/ios/icon-60-3x.png" />
		<icon platform="ios" height="76" width="76" src="www/res/icon/ios/icon-76.png" />
		<icon platform="ios" height="152" width="152" src="www/res/icon/ios/icon-76-2x.png" />
		<icon platform="ios" height="40" width="40" src="www/res/icon/ios/icon-40.png" />
		<icon platform="ios" height="80" width="80" src="www/res/icon/ios/icon-40-2x.png" />
		<icon platform="ios" height="57" width="57" src="www/res/icon/ios/icon-57.png" />
		<icon platform="ios" height="114" width="114" src="www/res/icon/ios/icon-57-2x.png" />
		<icon platform="ios" height="72" width="72" src="www/res/icon/ios/icon-72.png" />
		<icon platform="ios" height="144" width="144" src="www/res/icon/ios/icon-72-2x.png" />
		<icon platform="ios" height="29" width="29" src="www/res/icon/ios/icon-small.png" />
		<icon platform="ios" height="58" width="58" src="www/res/icon/ios/icon-small-2x.png" />
		<icon platform="ios" height="50" width="50" src="www/res/icon/ios/icon-50.png" />
		<icon platform="ios" height="100" width="100" src="www/res/icon/ios/icon-50-2x.png" />
		
		<splash platform="ios" height="480" width="320" src="www/res/screen/ios/screen-iphone-portrait.png" />
		<splash platform="ios" height="960" width="640" src="www/res/screen/ios/screen-iphone-portrait-2x.png" />
		<splash platform="ios" height="1024" width="768" src="www/res/screen/ios/screen-ipad-portrait.png" />
		<splash platform="ios" height="2048" width="1536" src="www/res/screen/ios/screen-ipad-portrait-2x.png" />
		<splash platform="ios" height="1136" width="640" src="www/res/screen/ios/screen-iphone-568h-2x.png" />
		<splash platform="ios" height="1334" width="750" src="www/res/screen/ios/screen-iphone-portrait-667h.png" />
		<splash platform="ios" height="2208" width="1242" src="www/res/screen/ios/screen-iphone-portrait-736h.png" />
	</platform>
	<platform name="android">
		<icon platform="android" qualifier="ldpi" src="www/res/icon/android/icon-36-ldpi.png" />
		<icon platform="android" qualifier="mdpi" src="www/res/icon/android/icon-48-mdpi.png" />
		<icon platform="android" qualifier="hdpi" src="www/res/icon/android/icon-72-hdpi.png" />
		<icon platform="android" qualifier="xhdpi" src="www/res/icon/android/icon-96-xhdpi.png" />
		<icon platform="android" qualifier="xxhdpi" src="www/res/icon/android/icon-144-xxhdpi.png" />
		<icon platform="android" qualifier="xxxhdpi" src="www/res/icon/android/icon-192-xxxhdpi.png" />
	
		<splash platform="android" qualifier="port-hdpi" src="www/res/screen/android/screen-hdpi-portrait.png" />
		<splash platform="android" qualifier="port-ldpi" src="www/res/screen/android/screen-ldpi-portrait.png" />
		<splash platform="android" qualifier="port-mdpi" src="www/res/screen/android/screen-mdpi-portrait.png" />
		<splash platform="android" qualifier="port-xhdpi" src="www/res/screen/android/screen-xhdpi-portrait.png" />
	</platform>
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="phonegap-plugin-barcodescanner" spec="~6.0.5" />
    <plugin name="cordova-plugin-uniquedeviceid" spec="~1.3.2" />
</widget>
